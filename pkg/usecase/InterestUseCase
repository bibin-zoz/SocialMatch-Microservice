
package usecase

import (
	"context"

	"github.com/bibin-zoz/social-match-admin-svc/pkg/repository" // Import repository package
)

type InterestUseCase {
	interestRepo repository.InterestRepository // Assuming you have an InterestRepository interface
}

func NewInterestUseCase(interestRepo repository.InterestRepository) *InterestUseCase {
	return &InterestUseCaseImpl{
		interestRepo: interestRepo,
	}
}

func (uc *InterestUseCase) CheckInterest(ctx context.Context, interestID string) (bool, error) {
	exists, err := uc.interestRepo.CheckInterest(ctx, interestID)
	if err != nil {
		return false, err
	}
	return exists, nil
}

